
@if (User.Identity.IsAuthenticated)
{//admin implment in the navbar
<form method="post" class="form-inline" asp-page="/Admin/logout">
    <span class="lead text-white-50"> Welcome @User.Identity.Name </span>
    <button type="submit" class="btn btn-sm btn-primary ml-2 text-white lead">Logout</button>
</form>
}
else //anonymous
{
    <a class="btn btn-sm btn-primary text-white lead" asp-page="/Admin/login">Log in</a>
}